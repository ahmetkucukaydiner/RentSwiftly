@model CreateBrandDto

@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Marka Girişi</h4>
                <p class="card-subtitle mb-4">Yeni marka tanımlayabilirisiniz. Veri girişinden sonra ekle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputBrand">Marka</label>
                        <input type="text" class="form-control" asp-for="Name" id="exampleInputBrand" placeholder="Marka girişi yapınız.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

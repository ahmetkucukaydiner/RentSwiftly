@model UpdateBrandDto

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Marka Güncelleme</h4>
                <p class="card-subtitle mb-4">Marka bilgisini güncelleyebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="BrandID" />
                    <div class="form-group">
                        <label for="exampleInputBrand">Marka</label>
                        <input type="text" class="form-control" asp-for="Name" id="exampleInputBrand" placeholder="Marka girişi yapınız.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light"> Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>


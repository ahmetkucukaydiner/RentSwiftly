@model CreateFeatureDto

@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Araç Özelliği Girişi</h4>
                <p class="card-subtitle mb-4">Araç ile ilgili yeni özellik tanımlayabilirisiniz. Veri girişinden sonra ekle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">                                      
                    <div class="form-group">
                        <label for="exampleInputName">Özellik Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Özellik adı girişi yapınız.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>



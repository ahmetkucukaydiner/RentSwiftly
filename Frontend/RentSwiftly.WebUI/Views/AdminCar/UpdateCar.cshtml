@model UpdateCarDto

@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araç Güncelleme</h4>
                <p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz olarak doldurmanız gereklidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="CarID" />
                    <div class="form-group">
                        <label for="exampleInputBrand">Marka</label>
                        @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputModel">Model</label>
                        <input type="text" class="form-control" asp-for="Model" id="exampleInputModel" placeholder="Model girişi yapınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputCoverImage">Kapak Fotoğrafı</label>
                        <input type="text" class="form-control" asp-for="CoverImageUrl" id="exampleInputCoverImage" placeholder="Kapak fotoğrafı linkini giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputKm">Kilometre</label>
                        <input type="number" class="form-control" asp-for="Kilometer" id="exampleInputKm" placeholder="Km bilgisini giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputTransmission">Vites Türü</label>
                        <input type="text" class="form-control" asp-for="Transmission" id="exampleInputTransmission" placeholder="Vites türünü giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputSeat">Koltuk Sayısı</label>
                        <input type="number" class="form-control" asp-for="Seat" id="exampleInputSeat" placeholder="Koltuk sayısını giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputBaggage">Bagaj Sayısı</label>
                        <input type="number" class="form-control" asp-for="Baggage" id="exampleInputBaggage" placeholder="Bagaj sayısını giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFuel">Yakıt Türü</label>
                        <input type="text" class="form-control" asp-for="Fuel" id="exampleInputFuel" placeholder="Yakıt türünü giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputBigImage">Büyük Kapak Fotoğrafı</label>
                        <input type="text" class="form-control" asp-for="BigImageUrl" id="exampleInputBigImage" placeholder="Araç detayında görünecek fotoğraf linkini giriniz">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>


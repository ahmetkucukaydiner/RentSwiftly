@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımda Bilgisi Güncelleme Sayfası</h4>
                <p class="card-subtitle mb-4">Web sitenizin ana sayfası için yeni hakkımda alanı tanımlayabilirisiniz. Veri girişinden sonra güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="AboutID" />
                    <div class="form-group">
                        <label for="exampleInputTitle">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" id="exampleInputTitle" placeholder="Başlık girişi yapınız.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescription">Açıklama</label>
                        <textarea rows="5" class="form-control" asp-for="Description" id="exampleInputDescription" placeholder="Açıklama girişi yapınız."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputImageUrl">Görsel</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputImageUrl" placeholder="Görsel linki girişi yapınız.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda Yazısını Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
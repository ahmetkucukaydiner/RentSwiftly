@model List<ResultLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Bilgisi Ekleme ve Güncelleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Lokasyonlar ile ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz. Sağ tarafta yer alan buton üzerinden bu lokasyonun harita bilgisine erişim sağlayabilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Lokasyon Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Konumu Aç</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminLocation/DeleteLocation/@item.LocationId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Admin/AdminLocation/LocationDetail/@item.LocationId" class="btn btn-outline-dark">Konumu Aç</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminLocation/CreateLocation" class="btn btn-outline-primary">Yeni Lokasyon Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Lokasyon Girişi</h4>
                <p class="card-subtitle mb-4">Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır.</p>
                <form method="post">
                    <input type="hidden" asp-for="LocationId" />
                    <div class="form-group">
                        <label for="exampleInputName">Lokasyon Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Lokasyon adını giriniz.">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light">Lokasyon Bilgisini Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Banner Girişi</h4>
                <p class="card-subtitle mb-4">Web sitenizin ana sayfası için yeni banner tanımlayabilirisiniz. Veri girişinden sonra ekle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="BannerID" />
                    <div class="form-group">
                        <label for="exampleInputTitle">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" id="exampleInputTitle" placeholder="Başlık girişi yapınız.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescription">Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" id="exampleInputDescription" placeholder="Açıklama girişi yapınız.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputVideoDescription">Video Açıklaması</label>
                        <input type="text" class="form-control" asp-for="VideoDescription" id="exampleInputVideoDescription" placeholder="Video açıklaması girişi yapınız.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputVideoUrl">Video Linki</label>
                        <input type="text" class="form-control" asp-for="VideoUrl" id="exampleInputVideoUrl" placeholder="Video linki girişi yapınız.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Banner'ı Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>


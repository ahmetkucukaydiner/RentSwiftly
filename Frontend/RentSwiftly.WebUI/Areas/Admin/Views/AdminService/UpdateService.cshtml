@model UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
                <p class="card-subtitle mb-4">Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki düzenleme işlemlerini bu sayfadan gerçekleştirebilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="ServiceID" />
                    <div class="form-group">
                        <label for="exampleInputTitle">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" id="exampleInputTitle" placeholder="Hizmet başlığını giriniz.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescription">Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" id="exampleInputDescription" placeholder="Hizmet açıklamasını giriniz.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputIconUrl">Icon Url</label>
                        <input type="text" class="form-control" asp-for="IconUrl" id="exampleInputIconUrl" placeholder="Icon URL giriniz.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Servisi Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
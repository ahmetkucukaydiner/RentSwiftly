@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Sosyal Medya Güncelleme Sayfası</h4>
                <p class="card-subtitle mb-4"> Sosyal medya hesaplarınıza ait veri düzenlemesini bu sayfadan yapabilirsiniz.</p>
                <form method="post">
                    <input type="hidden" asp-for="SocialMediaID" />
                    <div class="form-group">
                        <label for="exampleInputName">Sosyal Medya Adı</label>
                        <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Sosyal medya adı giriniz.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputURL">URL</label>
                        <input type="text" class="form-control" asp-for="Url" id="exampleInputURL" placeholder="Sosyal medya URL'sini giriniz.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputIcon">Sosyal Medya Iconu</label>
                        <input type="text" class="form-control" asp-for="Icon" id="exampleInputIcon" placeholder="Sosyal medya iconu giriniz.">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>